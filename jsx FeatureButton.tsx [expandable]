import { useAutumn } from "autumn-js/react";
import PaywallDialog from "./PaywallDialog";

export default function FeatureButton() {
  const { check } = useAutumn();

  return (
    <button
      onClick={async () => {
        await check({
          featureId: "chat_messages",
          dialog: PaywallDialog,
        });
      }}
    >
      Send Message
    </button>
  );
} 